  1 FROM maven:3-openjdk-17 as spc
  2 RUN git clone https://github.com/shaiksohail11/spring-petclinic.git && \
  3       cd spring-petclinic && \
  4       mvn package
  5 
  6 FROM kainoscom/jdk-17-slim
  7 EXPOSE 8080
  8 COPY --from=spc /spring-petclinic/target/spring-petclinic-3.0.0-SNAPSHOT.jar \spring-petclinic-3.0.0-SNAPSHOT.jar
  9 CMD ["java", "-jar", "/spring-petclinic-3.0.0-SNAPSHOT.jar"]                                                         
